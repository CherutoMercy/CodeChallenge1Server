<!doctype html>
<html>
<head>
    <title>Events Edit Form</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>

<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Enter Events</h1>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

     <form action="/eventsrecords" method="post">
        <div class="form-group">
            <label>Event</label>
            <input type="text" class="form-control" name="eventname">
        </div>
        <div class="form-group">
            <label>Venue</label>
            <input type="text" class="form-control" name="eventvenue">
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control" name="eventdate">
        </div>
        <div class="form-group">
            <label>Time</label>
            <input type="time" class="form-control" name="eventtime">
        </div>
        <div class="form-group">
            <label>Event Description</label>
            <input type="text" class="form-control" name="eventdesc">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Submit</button>
     </form>

    <hr>
    *events listed here
    <p>Previous Page <a href="/profile">Back</a>.</p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>
